<div class='container'>
  <%= render 'layouts/errors', obj: @book_comment %>
<div>
  <%= flash[:notice] %>
</div>

  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"100x100" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <% if @books.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(@books), method: :delete do %>
              ♥<%= @books.favorites.count %>
            <% end %>
          </td>
          <% else %>
          <td>
            <%= link_to book_favorites_path(@books), method: :post do %>
              ♡<%= @books.favorites.count %>
            <% end %>
          </td>
          <% end %>
        <td>
          コメント件数：<%= @books.book_comments.count %>
        </td>
          <% if @books.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>

      <div>
        <% @books.book_comments.each do |book_comment| %>
        <table class='table'>
          <tr>
            <td><%= image_tag book_comment.user.get_profile_image, size:"100x100" %></td>
            <td><%= book_comment.comment %></td>
            <td><%= link_to 'Destroy', book_book_comment_path(@books,book_comment) ,method: :DELETE, class: "btn btn-sm btn-danger"%></td>
          </tr>
        </table>

          <P><%= book_comment.user.name %></P>
        <% end %>
      </div>
      <div>
        <%= form_with model: [@books, @book_comment] do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, class: "form-control" %>
          </div>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>