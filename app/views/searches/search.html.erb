<div class='container'>

<% if @range == "User" %>
  <h2>Users search Result</h2>
    <table class='table'>
      <thead>
        <tr>
          <th></th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
  <h2>Books search Result</h2>
    <table class='table'>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>
</div>